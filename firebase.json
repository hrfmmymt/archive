{
  "hosting": {
    "public": "public",
    "redirects": [{
      "source": "/",
      "destination": "/auth"
    }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ 
      {"source": "/", "function": "requestHandler"},
      {"source": "/post/*", "function": "requestHandler"},
      {"source": "/sw.js", "function": "requestHandler"},
      {"source": "/offline", "function": "requestHandler"}
    ]
  }
}
